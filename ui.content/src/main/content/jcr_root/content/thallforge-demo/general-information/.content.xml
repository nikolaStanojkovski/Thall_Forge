                jcr:primaryType="nt:unstructured"
                sling:resourceType="thallforge/components/core/text"
                text="&lt;div>&amp;nbsp;&lt;/div>&#xd;&#xa;&lt;h2>&amp;nbsp;&lt;/h2>&#xd;&#xa;&lt;h2>&amp;nbsp;&lt;/h2>&#xd;&#xa;&lt;h2>Core Functionalities&lt;/h2>&#xd;&#xa;&lt;h4>Player Component&lt;/h4>&#xd;&#xa;&lt;p>Basic functionality including play, pause, skip, volume control, and shuffle.&lt;/p>&#xd;&#xa;&lt;h4>Content Discovery&lt;/h4>&#xd;&#xa;&lt;p>Genre-based navigation and trending albums to help users discover music.&lt;/p>&#xd;&#xa;&lt;h4>Music Streaming&lt;/h4>&#xd;&#xa;&lt;p>Stream high-quality music tracks.&lt;/p>&#xd;&#xa;"
                textIsRich="true">
                <cq:responsive jcr:primaryType="nt:unstructured">
