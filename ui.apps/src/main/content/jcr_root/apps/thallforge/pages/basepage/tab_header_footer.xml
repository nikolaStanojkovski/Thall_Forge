<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          cq:showOnCreate="{Boolean}true"
          jcr:primaryType="nt:unstructured"
          jcr:title="Header &#38; Footer"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <items jcr:primaryType="nt:unstructured">
        <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <headerfooter jcr:primaryType="nt:unstructured"
                              jcr:title="Header and Footer"
                              sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                              cq:showOnCreate="{Boolean}true">
                    <items jcr:primaryType="nt:unstructured">
                        <headerxf jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                  fieldLabel="Header Experience Fragment"
                                  name="./headerExperienceFragmentReference"
                                  rootPath="/content/experience-fragments"/>
                        <footerxf jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                  fieldLabel="Footer Experience Fragment"
                                  name="./footerExperienceFragmentReference"
                                  rootPath="/content/experience-fragments"/>
                    </items>
                </headerfooter>
            </items>
        </column>
    </items>
</jcr:root>
